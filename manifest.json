{
  "name": "Slant",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Slant Chrome extension.",
  "browser_action": {
    "default_icon": "./resources/forward-slash.png",
    "default_popup": "//popups/index.html"
  },

  "background": {
  	"scripts": [
      "/vendor/jquery/dist/jquery.js",
      "//js/background.js",
      "/resources/newsites.js",
      "/js/app.js"]
  },
  "permissions": ["activeTab",
        "http://www.google.com/",
        "https://www.google.com/"
  ],

  "content_scripts":[
    {
      "matches": ["<all_urls>"],
      "js": 
        [
        "/vendor/jquery/dist/jquery.js",
        "/js/app.js"
        ]
    }
  ]
}